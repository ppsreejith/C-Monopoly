from django.core.management.base import BaseCommand
from game.tests import createUser, createState
import random

class Command(BaseCommand):
    
    def handle(self, *args, **options):
        profiles = []
        for i in range(1,300):
            profiles.append(createUser(i))
        stateValues = {
             'population' : 90,
             'coordx':90,
             'coordy':23,
             }
        productValues = {
            'maintenance_energy' : 0.02,
            'energy_per_unit' : 0.03,
            'cost_price' : 0.3,
            'initial_cost' : 5,
            'maintenance_cost':0.01,
            }
        energyValues = {
            'initial_cost' : 20,
            'maintenance_cost' : 0.03,
            'carbon_per_unit' : 0.3,
            'output' : 1,
            }
        calamityValues = {
            'severity' : 40,
            'probability_number' : 5,
            }
        transport = {
            'initial_cost' : 5,
            'stopping_cost' : 0.03,
            'travel_rate' : 0.003,
            }
        nameDef = "test2609"
        for i in range(0,20):
            stateVals = stateValues
            stateVals['population'] += random.randint(150) - 75
            stateVals['coordx'] += random.randint(60) - 30
            stateVals['coordy'] += random.randint(30) - 15
            createState(name = nameDef+i,**stateVals)